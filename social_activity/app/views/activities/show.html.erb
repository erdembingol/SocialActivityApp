<%= link_to "Katılacağım", :katilacagim %>

<p> 
	Etkinlik Resmi : <%= image_tag(@activity_image.image, :size => "64x64", :alt => "Show Group") %>
</p>
<p> 
	Etkinlik Adı : <%= @activity.name %>
</p>
<p>
 	Etkinlik Yeri : <%= @activity.place_name %> 
</p>
<p> 
	Yaş Grubu : <%= @activity.age_group %>
</p>
<p> 
	Cinsiyet : <%= @activity.gender %>
</p>
<p> 
	Start Date : <%= @activity.start_date %> 
	Finish Date : <%= @activity.finish_date %>
</p>
<p> 
	Fiyat : <%= @activity.paid %>
</p>
<p> 
	Etkinlik Açıklama : <%= @activity.explain %>
</p>
<p> 
	Etkinlik Adresi: <%= @activity.place_adress %>
</p>

<h4> Katılanlar </h4>
<% @users.each do |user| %>
	<p> 
		<%= image_tag(user.profil_image, :size => "64x64", :alt => "Show Group") %> <%= user.name %> <%= user.lastname %> 
	</p>
	<hr>
<% end %> 

<h4> Yorumlar </h4>
<% @commentts.each do |com| %>
	<p> 
		<%= image_tag(com.profil_image, :size => "64x64", :alt => "Show Group") %>
	 	<%= com.body %> 
	</p>
	<p> 
		Created : <%= com.created_at %> 
	</p>
	<hr>
<% end %>

<%= form_for(:commentt, :url => {:controller => 'activities', :action => 'do_commentt'}) do |f| %>
	<p>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit "Yorum Yap" %>
	</p>
<% end %> 



