<h1> Yeni Etkinlik Kayıt </h1>
<%= form_for @activity do |f| %>
	<p>
		Başlangıç Tarihi : <%= f.date_select :start_date %>
	</p>
	<p>
		Bitiş Tarihi : <%= f.date_select :finish_date %>
	</p>
	<p>
		<%= f.submit "Listele" %>
	</p>
<% end %>

<% @activities.each do |activity| %>
	<p> <% activity.name %> </p>
	<p> <% activity.place_name %> </p>
	<p> Start Date : <% activity.start_date %> 
		Finish Date : <% activity.finish_date %> </p>
<% end %> 