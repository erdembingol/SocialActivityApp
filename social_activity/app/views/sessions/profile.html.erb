</p>




<h4>
 	Katılmayı Düşündüğü Etkinlikler : <%= @joined_think_activities_size %> 
</h4>

<h4>
 	Katıldığı Etkinlikler : <%= @joined_activities_size %> 
</h4>





<h2> Katılmayı Düşündüğü Etkinlikler </h2>
<% @joined_think_activities.each do |activity| %>
	<p> 
		Etkinlik Resmi : <%= image_tag(activity.image, :size => "64x64", :alt => "Show Group") %>
	</p>
	<p> 
		Etkinlik Adı : <%= link_to activity.name, activity %>
	</p>
	<p>
	 	Etkinlik Yeri : <%= activity.place_name %> 
	</p>
	<p> 
		Start Date : <%= activity.start_date %> 
		Finish Date : <%= activity.finish_date %>
	</p>
	<hr>
<% end %> 

<h2> Katıldığı Etkinlikler </h2>
<% @joined_activities.each do |activity| %>
	<p> 
		Etkinlik Resmi : <%= image_tag(activity.image, :size => "64x64", :alt => "Show Group") %>
	</p>
	<p> 
		Etkinlik Adı : <%= link_to activity.name, activity %>
	</p>
	<p>
	 	Etkinlik Yeri : <%= activity.place_name %> 
	</p>
	<p> 
		Start Date : <%= activity.start_date %> 
		Finish Date : <%= activity.finish_date %>
	</p>
	<hr>
<% end %> 
